extends layout

block content
	h1 Send SMS
	hr
	section.row
		section.col-md-9
			form.form-horizontal(role='form',  parsley-validate, data-data=encodeURIComponent(JSON.stringify(member)))#new-member-form
				section.form-group
					label.col-sm-3.control-label Recipients
					section.col-sm-9
						section.btn-group(data-toggle='buttons')#recipient_type
							label.btn.btn-danger.active
								input(type="radio", name="recipient_type", value="Everyone")
								| Everyone
							label.btn.btn-danger
								input(type="radio", name="recipient_type", value="Bronze Members")
								| Bronze Members
							label.btn.btn-danger
								input(type="radio", name="recipient_type", value="Silver Members")
								| Silver Members
							label.btn.btn-danger
								input(type="radio", name="recipient_type", value="Gold Members")
								| Gold Members
	
				section.form-group
					label.col-sm-3.control-label Message
					section.col-sm-9
						textarea(placeholder='Message', rows="6").form-control
				section.form-group
					label.col-sm-3.control-label &nbsp;
					section.col-sm-9
						button(type='button').btn Send Bulk Message
