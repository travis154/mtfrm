extends layout

block content
	h1 New Member Registration
	section.row
		section.col-md-6
			form.form-horizontal(role='form',  parsley-validate)
				h2 Business information
				hr
				section.form-group
					label.col-sm-3.control-label Name
					section.col-sm-9
						input.form-control(type='text', placeholder='Name', required)#business_name
				section.form-group
					label.col-sm-3.control-label Registration Number
					section.col-sm-9
						input.form-control(type='text', placeholder='Business Registration Number', required)#business_reg
				section.form-group
					label.col-sm-3.control-label Address
					section.col-sm-9
						input.form-control(type='text', placeholder='Address', required)#business_addr
				section.form-group
					label.col-sm-3.control-label Phone no
					section.col-sm-9
						input.form-control(type='text', placeholder='Phone no', required)#business_phone
				section.form-group
					label.col-sm-3.control-label Fax
					section.col-sm-9
						input.form-control(type='text', placeholder='Fax', required)#business_fax
				section.form-group
					label.col-sm-3.control-label Email
					section.col-sm-9
						input.form-control(type='email', placeholder='Email', required)#business_email
				section.form-group
					label.col-sm-3.control-label Website
					section.col-sm-9
						input.form-control(type='text', placeholder='Website', required)#business_website
				section.form-group
					label.col-sm-3.control-label Type Of Business
					section.col-sm-9
						section.btn-group(data-toggle='buttons')
							label.btn.btn-danger
								input(type="radio", name="business_type", id="sole_trader")
								| Sole Trader
							label.btn.btn-danger
								input(type="radio", name="business_type", id="sole_trader")
								| Local Investment
							label.btn.btn-danger
								input(type="radio", name="business_type", id="sole_trader")
								| Company
						
				section.form-group
					label.col-sm-3.control-label Nature Of Business
					section.col-sm-9
						section.btn-group(data-toggle='buttons')
							label.btn.btn-danger
								input(type="radio", name="business_type", id="sole_trader")
								| Wholesale
							label.btn.btn-danger
								input(type="radio", name="business_type", id="sole_trader")
								| Retail
							label.btn.btn-danger
								input(type="radio", name="business_type", id="sole_trader")
								| Exporter
							label.btn.btn-danger
								input(type="radio", name="business_type", id="sole_trader")
								| Importer
						
						
				h2 Personal information
				hr
				section.form-group
					label.col-sm-3.control-label Name
					section.col-sm-9
						input.form-control(type='text', placeholder='Name', required)#personal_name
				section.form-group
					label.col-sm-3.control-label National ID No
					section.col-sm-9
						input.form-control(type='text', placeholder='National ID Number', required)#personal_id
				section.form-group
					label.col-sm-3.control-label Sex
					section.col-sm-9
						section.btn-group(data-toggle='buttons')
							label.btn.btn-danger
								input(type="radio", name="business_type", id="sole_trader")
								| Male
							label.btn.btn-danger
								input(type="radio", name="business_type", id="sole_trader")
								| Female
				section.form-group
					label.col-sm-3.control-label Mobile no
					section.col-sm-9
						input.form-control(type='text', placeholder='Phone no', required)#personal_mobile
				section.form-group
					label.col-sm-3.control-label Permanent Address
					section.col-sm-9
						input.form-control(type='text', placeholder='Address', required)#personal_permanent_addr
				section.form-group
					label.col-sm-3.control-label Current Address
					section.col-sm-9
						input.form-control(type='text', placeholder='Address', required)#personal_current_addr
				section.form-group
					label.col-sm-3.control-label Email
					section.col-sm-9
						input.form-control(type='email', placeholder='Email', required)#personal_email
				h2 Membership
				hr									
				section.form-group
					label.col-sm-3.control-label Type
					section.col-sm-9
						section.btn-group(data-toggle='buttons')
							label.btn.btn-danger
								input(type="radio", name="business_type", id="sole_trader")
								| Bronze
							label.btn.btn-danger
								input(type="radio", name="business_type", id="sole_trader")
								| Silver
							label.btn.btn-danger
								input(type="radio", name="business_type", id="sole_trader")
								| Gold
				section.form-group
					section.col-sm-offset-3.col-sm-9
						button.btn.btn-info.btn-block(type='submit') Register
			
